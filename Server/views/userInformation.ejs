<%- include("super-common-header.ejs") %>

<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" 
          integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" 
          crossorigin="anonymous">
</head>

<body>
    <div class="container my-5">
        <h1 class="d-flex align-items-center justify-content-between">
            User Information
        </h1>

        <div class="card mb-4 shadow">
            <div class="card-body">
                <h5 class="card-title">Welcome, <%= username %>!</h5>
                <p class="card-text">Manage your account settings below.</p>
            </div>
        </div>

        <div class="row">
            <!-- Change Username Form -->
            <div class="col-md-4">
                <div class="card shadow">
                    <div class="card-body">
                        <h5 class="card-title">Change Username</h5>
                        <form action="/changeUsername" method="POST">
                            <div class="mb-3">
                                <label for="newUsername" class="form-label">New Username</label>
                                <input type="text" class="form-control" id="newUsername" name="newUsername" required>
                            </div>
                            <button type="submit" class="btn btn-primary w-100">Update Username</button>
                        </form>
                    </div>
                </div>
            </div>

            <!-- Change Password Form -->
            <div class="col-md-4">
                <div class="card shadow">
                    <div class="card-body">
                        <h5 class="card-title">Change Password</h5>
                        <form action="/changePassword" method="POST">
                            <div class="mb-3">
                                <label for="currentPassword" class="form-label">Current Password</label>
                                <input type="password" class="form-control" id="currentPassword" name="currentPassword" required>
                            </div>
                            <div class="mb-3">
                                <label for="newPassword" class="form-label">New Password</label>
                                <input type="password" class="form-control" id="newPassword" name="newPassword" required>
                            </div>
                            <button type="submit" class="btn btn-primary w-100">Update Password</button>
                        </form>
                    </div>
                </div>
            </div>

            <!-- Delete Account Form -->
            <div class="col-md-4">
                <div class="card shadow">
                    <div class="card-body">
                        <h5 class="card-title text-danger">Delete Account</h5>
                        <form action="/deleteAccount" method="POST">
                            <div class="mb-3">
                                <label for="confirmDelete" class="form-label">Type "DELETE" to confirm</label>
                                <input type="text" class="form-control" id="confirmDelete" name="confirmDelete" required>
                            </div>
                            <button type="submit" class="btn btn-danger w-100">Delete Account</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <%- include("super-common-footer.ejs") %>
</body>
